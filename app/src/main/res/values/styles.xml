<resources>

    <style name="ThreemojiTheme" parent="ThreemojiTheme.Base">
    </style>

    <!-- Base application theme. -->
    <style name="ThreemojiTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/threemoji_green</item>
        <item name="colorPrimaryDark">@color/threemoji_dark_green</item>
        <item name="colorAccent">@color/threemoji_700_green</item>
        <item name="android:itemTextAppearance">@style/MenuItemStyle</item>
    </style>

    <style name="MenuItemStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="RadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white_33</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
