<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/nav_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/threemoji_orange"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/profile_emoji1"
            android:layout_width="@dimen/user_profile_emoji_size"
            android:layout_height="@dimen/user_profile_emoji_size"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/profile_emoji2"
            android:layout_width="@dimen/user_profile_emoji_size"
            android:layout_height="@dimen/user_profile_emoji_size"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/profile_emoji3"
            android:layout_width="@dimen/user_profile_emoji_size"
            android:layout_height="@dimen/user_profile_emoji_size"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <TextView
        android:id="@+id/profile_generated_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

</LinearLayout>